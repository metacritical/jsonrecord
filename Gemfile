source 'https://rubygems.org'

# Specify your gem's dependencies in JSONRecord.gemspec
gemspec

# Development dependencies
group :development, :test do
  gem 'rake'
  gem 'minitest'
  gem 'minitest-reporters'  # Better test output
  gem 'bundler'
end

# Optional performance enhancements (can be added when needed)
gem 'rocksdb-ruby'  # Uncomment after: brew install rocksdb
gem 'annoy-rb'      # Vector similarity search
